{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Virtual Environment",
      "type": "shell",
      "command": "python3 -m venv .env",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Install Requirements",
      "type": "shell",
      "command": "source .env/bin/activate && pip install -r requirements.txt",
      "problemMatcher": [],
      "dependsOn": "Setup Virtual Environment"
    },
    {
      "label": "Pre-Commit Install",
      "type": "shell",
      "command": "source .env/bin/activate && pre-commit install",
      "problemMatcher": [],
      "dependsOn": "Install Requirements"
    }
  ]
}